<resources>
    <!-- Base application theme. -->
    <style name="Theme.DigitalForce" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_normal</item>
        <item name="colorSecondaryVariant">@color/red_normal</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryContainer">@color/red_dark</item>

        <item name="android:textColor">#FFCAC4D0</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/idf2</item>
        <item name="postSplashScreenTheme">@style/Theme.DigitalForce</item>
    </style>
</resources>